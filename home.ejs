<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>MyBlog</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/style.css" />
</head>
<body class="bg-dark text-white d-flex flex-column min-vh-100">


  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-black fixed-top shadow-sm">
    <div class="container-fluid">
      <a class="navbar-brand fw-bold d-flex align-items-center" href="/">
        <img src="https://cdn-icons-png.flaticon.com/512/10026/10026257.png" style="width: 30px; height: 30px; margin-right: 10px;" alt="Blog Logo">
        MyBlog
      </a>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item"><a class="nav-link active" href="/">Home</a></li>
          <li class="nav-item"><a class="nav-link" href="javascript:void(0);" onclick="toggleForm()">Community</a></li>
          <li class="nav-item"><a class="nav-link" href="javascript:void(0);" onclick="toggleForm()">Resources</a></li>
          <li class="nav-item"><a class="nav-link" href="/about">About</a></li>
        </ul>
        <form class="d-flex" action="/search" method="GET">
          <input class="form-control me-2" type="search" name="query" placeholder="Search" />
          <button class="btn btn-outline-light" type="submit">Search</button>
        </form>
      </div>
    </div>
  </nav>

  <!-- Compose Blog Button -->
  <div class="compose-dropdown">
    <button class="compose-btn" onclick="toggleForm()">‚úçÔ∏è Write Blog</button>
  </div>

  <!-- Compose Form -->
  <div class="form-dropdown" id="blogForm">
    <div class="form-container">
      <div class="form-header">
        <h3 class="form-title">Create Blog Post</h3>
        <button class="close-btn" onclick="toggleForm()">√ó</button>
      </div>
      <form action="/compose" method="post">
        <input type="text" name="title" placeholder="Enter the Blog Title Here" required />
        <textarea name="content" placeholder="Enter the Blog Content" required></textarea>
        <button type="submit">Publish</button>
      </form>
    </div>
  </div>

  <!-- Blog List -->
  <div class="container pt-5 mt-5" style="margin-top: 120px;">
    <% if (posts.length === 0) { %>
      <p class="text-center fs-5">No blogs yet. Start by writing one!</p>
    <% } else { %>
      <% posts.forEach(post => { %>
        <div class="card bg-light text-dark mb-3 shadow">
          <div class="card-body">
            <h4>
              <a href="/posts/<%= post.title %>" class="text-decoration-none text-dark"><%= post.title %></a>
            </h4>
            <p><%= post.content.substring(0, 150) %>...</p>
            <div class="d-flex gap-2 mt-2">
              <a href="/edit/<%= post.id %>" class="btn btn-warning btn-sm">Edit</a>
              <form action="/delete/<%= post.id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this post?')">
                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
              </form>
            </div>
          </div>
        </div>
      <% }) %>
    <% } %>
  </div>

  <!-- Footer -->
  <footer class="bg-black text-white text-center py-4 mt-5">
    <div class="container">
      <p class="mb-1">&copy; <%= new Date().getFullYear() %> MyBlog. All rights reserved.</p>
      <p class="mb-0">Created by <strong>Trimman</strong> | Built with ‚ù§Ô∏è using the MERN Stack</p>
      <div class="mt-2">
        <a href="https://github.com/Trimman-25" class="text-white text-decoration-none mx-2" target="_blank">GitHub</a>
        <a href="https://www.linkedin.com/in/trimman-koduri-626294323/" class="text-white text-decoration-none mx-2" target="_blank">LinkedIn</a>
        <a href="/about" class="text-white text-decoration-none mx-2">About</a>
      </div>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function toggleForm() {
      const form = document.getElementById('blogForm');
      const button = document.querySelector('.compose-btn');
      if (form.classList.contains('active')) {
        form.classList.remove('active');
        button.innerHTML = '‚úçÔ∏è Write Blog';
      } else {
        form.classList.add('active');
        button.innerHTML = 'üìù Writing...';
        setTimeout(() => {
          const firstInput = form.querySelector('input[type="text"]');
          if (firstInput) firstInput.focus();
        }, 200);
      }
    }

    document.addEventListener('click', function (event) {
      const form = document.getElementById('blogForm');
      const button = document.querySelector('.compose-btn');
      const formContainer = document.querySelector('.form-container');
      if (form.classList.contains('active') &&
          !formContainer.contains(event.target) &&
          !button.contains(event.target)) {
        toggleForm();
      }
    });

    document.addEventListener('keydown', function (event) {
      if (event.key === 'Escape') {
        const form = document.getElementById('blogForm');
        if (form.classList.contains('active')) toggleForm();
      }
    });
  </script>
</body>
</html>
